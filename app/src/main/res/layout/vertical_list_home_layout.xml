<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:id="@+id/home_layout">
    <LinearLayout
        android:background="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">
        <android.support.v7.widget.CardView
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivHome"
                android:src="@drawable/homestay"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="240dp" />
            <ImageView
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/btnDelete"
                android:layout_gravity="right"
                android:src="@drawable/ic_wishlist_active"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:paddingTop="@dimen/default_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Villa"
                android:textColor="@color/colorBlack"
                android:id="@+id/tvTypeHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" - 5 Bed Rooms"
                android:layout_toRightOf="@id/tvTypeHome"
                android:textColor="@color/colorBlack"
                android:id="@+id/BedRoomNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="@dimen/default_padding"
                android:text="La Villa Angelina"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_below="@id/tvTypeHome"
                android:textSize="20sp"
                android:id="@+id/tvNameHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:drawablePadding="@dimen/default_padding"
                android:text="500"
                android:drawableLeft="@drawable/ic_money"
                android:textColor="@color/colorBlack"
                android:id="@+id/tvPricePerNight"
                android:layout_below="@id/tvNameHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="/night"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@id/tvPricePerNight"
                android:layout_below="@id/tvNameHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:drawablePadding="@dimen/default_padding"
                android:drawableLeft="@drawable/ic_marker1"
                android:text="Thạch Thất, Hòa lạc"
                android:textColor="@color/colorBlack"
                android:layout_below="@id/tvPricePerNight"
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
