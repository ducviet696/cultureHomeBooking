<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivHome"
                android:src="@drawable/homestay"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="240dp" />
            <ImageView
                android:id="@+id/btnDelete"
                android:layout_gravity="right"
                android:src="@drawable/ic_heart_color"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </FrameLayout>

        <RelativeLayout
            android:paddingTop="@dimen/default_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:text="Villa"
                android:textColor="@color/colorBlack"
                android:id="@+id/tvTypeHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" - 5 Bed Rooms"
                android:layout_toRightOf="@id/tvTypeHome"
                android:textColor="@color/colorBlack"
                android:id="@+id/BedRoomNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="La Villa Angelina"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_below="@id/tvTypeHome"
                android:textSize="20sp"
                android:id="@+id/tvNameHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="500"
                android:textColor="@color/colorBlack"
                android:id="@+id/tvPricePerNight"
                android:layout_below="@id/tvNameHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="$/night"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@id/tvPricePerNight"
                android:layout_below="@id/tvNameHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView

                android:id="@+id/iconMap"
                android:layout_below="@id/tvPricePerNight"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/ic_marker"/>
            <TextView
                android:text="Thạch Thất, Hòa lạc"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/iconMap"
                android:layout_below="@id/tvPricePerNight"
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:padding="@dimen/small_padding" />


</LinearLayout>
