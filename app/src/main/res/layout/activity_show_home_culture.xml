<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="@dimen/default_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShowHomeCultureActivity">
    <TextView
        android:id="@+id/tvBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/com_facebook_close"
        android:keepScreenOn="true"
        android:paddingVertical="@dimen/default_padding" />
    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:layout_marginVertical="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/large_text"
            android:textStyle="bold"
            android:text="This homestay hasn't culture service..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutNotEmpty"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvTittle"
        android:layout_marginVertical="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/large_text"
        android:textStyle="bold"
        android:text="HomeStay Cultures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTotalCul"
        android:layout_marginVertical="5dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/large_text"
        android:textStyle="bold"
        android:text="(0)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView
            android:textColor="@color/calendar_selected_day_bg"
            android:text="Please choose the service you want to experience."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCulture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:background="@color/colorPrimaryButtonActive"
            android:text="@string/save"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>