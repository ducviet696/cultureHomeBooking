<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main.HomeFragment"
    android:nestedScrollingEnabled="true">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="430dp">
     <ImageView
         android:id="@+id/imgBackground"
         android:scaleType="fitXY"
         android:src="@drawable/head_background"
         android:clickable="false"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_alignParentBottom="true"
    android:padding="@dimen/default_padding"
    android:layout_margin="@dimen/large_margin"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/large_margin"
            android:id="@+id/tvSearch"
            android:drawablePadding="@dimen/default_padding"
            android:hint="@string/location_or_homestay_name"
            android:drawableLeft="@drawable/ic_marker_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"/>
        <View

            android:paddingVertical="5dp"
            android:layout_below="@+id/tvSearch"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray" />
        <LinearLayout
            android:id="@+id/layoutCheckin"
            android:layout_below="@+id/tvSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding"
            android:weightSum="2">
            <TextView
                android:id="@id/tvCheckin"
                android:gravity="left"
                android:layout_weight="1"
                android:text="@string/check_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@id/tvCheckout"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/check_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:paddingVertical="5dp"
            android:layout_below="@+id/layoutCheckin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray" />
        <TextView
            android:gravity="bottom"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/default_padding"
            android:drawablePadding="@dimen/default_padding"
            android:drawableLeft="@drawable/ic_group_people"
            android:id="@+id/tvTotalGuest"
            android:layout_below="@+id/layoutCheckin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Guest"/>
        <View
            android:id="@+id/line"
            android:paddingVertical="5dp"
            android:layout_below="@+id/tvTotalGuest"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray" />
        <Button
            android:layout_below="@+id/line"
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="@dimen/default_margin"
            android:background="@color/colorPrimaryButtonActive"
            android:text="@string/search"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
 </RelativeLayout>

    <!--Show list-->

    <!--Similar Listing-->
    <TextView
        android:padding="@dimen/default_padding"
        android:layout_marginBottom="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Most Culture Listing"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/large_text"
        android:textStyle="bold" />
    <android.support.v7.widget.RecyclerView
        android:padding="@dimen/default_padding"
        android:nestedScrollingEnabled="false"
        android:id="@+id/rvMostCulture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


    <TextView
        android:padding="@dimen/default_padding"
        android:layout_marginBottom="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Homestay For Rick - Men"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/large_text"
        android:textStyle="bold" />
    <android.support.v7.widget.RecyclerView
        android:padding="@dimen/default_padding"
        android:nestedScrollingEnabled="false"
        android:id="@+id/rvForRick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>