<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    android:orientation="vertical"
    tools:context=".fragments.main.HomeFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="430dp">

                    <ImageView
                        android:id="@+id/imgBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:scaleType="fitXY"
                        android:src="@drawable/head_background" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"

                        android:layout_margin="@dimen/large_margin"
                        android:padding="@dimen/default_padding"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:clickable="false"
                                android:id="@+id/tvSearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/large_margin"

                                android:drawablePadding="@dimen/default_padding"

                                android:padding="@dimen/default_padding" />
                            <!--<ImageView-->
                                <!--android:clickable="false"-->
                                <!--android:id="@+id/tvSearch"-->
                                <!--android:src="@drawable/wantlogo"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content" />-->

                            <View

                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/tvSearch"
                                android:background="@color/colorGray"
                                android:paddingVertical="5dp" />

                            <LinearLayout
                                android:id="@+id/layoutCheckin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvSearch"
                                android:orientation="horizontal"
                                android:padding="@dimen/default_padding"
                                android:weightSum="2">

                                <TextView
                                    android:id="@id/tvCheckin"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="@string/check_in" />

                                <TextView
                                    android:id="@id/tvCheckout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/check_out" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/layoutCheckin"
                                android:background="@color/colorGray"
                                android:paddingVertical="5dp" />

                            <TextView
                                android:id="@+id/tvTotalGuest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/layoutCheckin"
                                android:drawableLeft="@drawable/ic_group_people"
                                android:drawablePadding="@dimen/default_padding"
                                android:gravity="bottom"
                                android:padding="@dimen/default_padding"
                                android:text="1 Guest"
                                android:textColor="@color/colorBlack" />

                            <View
                                android:id="@+id/line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/tvTotalGuest"
                                android:background="@color/colorGray"
                                android:paddingVertical="5dp" />

                            <Button
                                android:id="@+id/btnSearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line"
                                android:layout_marginHorizontal="30dp"
                                android:layout_marginVertical="@dimen/default_margin"
                                android:backgroundTint="@color/colorPrimaryButtonActive"
                                android:text="@string/search"
                                android:textColor="@color/colorWhite" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <!--Show list-->

                <!--Similar Listing-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_padding"
                        android:padding="@dimen/default_padding"
                        android:text="@string/most_culture_listing"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/large_text"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvMostCulture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:padding="@dimen/default_padding"></android.support.v7.widget.RecyclerView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_padding"
                        android:padding="@dimen/default_padding"
                        android:text="Homestay For Rick - Men"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/large_text"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvForRick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:padding="@dimen/default_padding"></android.support.v7.widget.RecyclerView>

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <include layout="@layout/error" />
</LinearLayout>