<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".activity.FilterSearchActivity">
    <LinearLayout
        android:paddingHorizontal="@dimen/default_padding"
        android:weightSum="5"
        android:orientation="horizontal"
        android:keepScreenOn="true"
        android:layout_marginVertical="@dimen/default_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tvClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/com_facebook_close"/>
        <TextView
            android:layout_gravity="bottom"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:text="Filter"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btnReset"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:text="Reset All"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:background="@color/colorWhite"
        android:paddingHorizontal="@dimen/default_padding"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Layout Booking method-->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_MethodBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack"
                    android:text="Instant Book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Switch
                    android:text="@string/instant_booking"
                    android:id="@+id/swIsInstant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/default_margin"
                    android:background="@color/colorGray" />
            </LinearLayout>
            <!--Layout Select Price-->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_SelectPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack"
                    android:text="Basic Pricing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--<SeekBar-->
                    <!--android:thumbTint="@color/colorPrimaryDark"-->
                    <!--android:id="@+id/sbPrice"-->
                    <!--android:min="50"-->
                    <!--android:max="2000"-->
                    <!--android:layout_marginVertical="@dimen/default_margin"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent" />-->

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvMinPrice"
                        android:textColor="@color/colorBlack"
                        android:text="$100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"
                        android:id="@+id/tvMaxPrice"
                        android:textColor="@color/colorBlack"
                        android:text="$100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

               <com.jaygoo.widget.RangeSeekBar
                   android:id="@+id/rsbPrice"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/default_margin"
                    android:background="@color/colorGray" />
            </LinearLayout>
            <!--Layout HomeStay Type-->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_HomestayType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack"
                    android:text="Homestay Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    <CheckBox
                        android:id="@+id/cbHomeTypeSap"
                        android:paddingVertical="@dimen/default_padding"
                        android:layoutDirection="rtl"
                        android:gravity="left|center"
                        android:text="Studio Apartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <CheckBox
                        android:id="@+id/cbHomeTypeAp"
                        android:paddingVertical="@dimen/default_padding"
                        android:layoutDirection="rtl"
                        android:gravity="left|center"
                        android:text="Appartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <CheckBox
                    android:id="@+id/cbHomeTypeVla"
                    android:paddingVertical="@dimen/default_padding"
                    android:layoutDirection="rtl"
                    android:gravity="left|center"
                    android:text="Villa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                    <CheckBox
                    android:id="@+id/cbHomeTypeHou"
                    android:paddingVertical="@dimen/default_padding"
                    android:layoutDirection="rtl"
                    android:gravity="left|center"
                    android:text="Entire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/default_margin"
                    android:background="@color/colorGray" />
            </LinearLayout>
            <!--Layout Room Type-->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_RoomType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack"
                    android:text="Room Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/cbRoomTypeSinge"
                    android:paddingVertical="@dimen/default_padding"
                    android:layoutDirection="rtl"
                    android:gravity="left|center"
                    android:text="Singe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/cbRoomTypeEnt"
                    android:paddingVertical="@dimen/default_padding"
                    android:layoutDirection="rtl"
                    android:gravity="left|center"
                    android:text="Entire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/default_margin"
                    android:background="@color/colorGray" />
            </LinearLayout>
            <!--Layout Culture Service-->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_Culture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack"
                    android:text="Culture Service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAllCulture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/default_margin"
                    android:background="@color/colorGray" />
            </LinearLayout>
            <!--Layout Amenity-->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_Amenity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack"
                    android:text="Amenity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAllAmenity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/default_margin"
                    android:background="@color/colorGray" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <!--CardView BookNow-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:background="@color/colorPrimaryButtonActive"
            android:text="@string/save"
            android:textColor="@color/colorWhite"/>
    </android.support.v7.widget.CardView>
    <!--End CardView BookNow-->
</LinearLayout>